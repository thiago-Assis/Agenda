<%- include('includes/head') %>
<%- include('includes/nav') %>

<div class="container">
    <div class="row">
        <div class="col-lg-2"></div>
        <div class="col-lg-8 my-3">
            <h1 style="color: goldenrod; font-size: 3em;" class=" text-center">Agenda</h1>
            <p class="text-center lead">Crie sua conta ou Entre</p>

            <%- include('includes/messages'); %> 

           <div class="row">

             <div class="col-lg">
               <h4>Crie sua conta</h4>
               <form action="/login/register" method="POST">
                <input type="hidden" name="_csrf" value=<%= csrfToken %>>
                <div class="form-group">
                  <label for="exampleInputEmail1" class="form-label">Email</label>
                  <input type="email" class="form-control" name="email">
                </div>
                <div class="form-group">
                  <label style="margin: 12px;"  class="form-label">Senha</label>
                  <input type="password" class="form-control" name="password">
                </div>
                <button style="margin: 15px 15px;" type="submit" class="btn btn-primary">Crie sua conta</button>
              </form>

             </div>
             <div class="col-lg">
              <h4>Acesse sua conta</h4>

              <form action="/login/login" method="POST">
                <input type="hidden" name="_csrf" value=<%= csrfToken %>>
                <div class="form-group mb-3">
                  <label for="exampleInputEmail1" class="form-label">Email</label>
                  <input type="email" class="form-control" name="email">
                </div>
                <div class="form-group">
                  <label for="exampleInputEmail1" class="form-label">Senha</label>
                  <input type="password" class="form-control" name="password">
                </div>
                <button  style="margin: 15px 15px;" type="submit" class="btn btn-danger">Entrar</button>
                </form>
            </div>
           </div>

        </div>
        <div class="col-lg-2"></div>
    </div>
</div>
<%- include('includes/footer') %>



